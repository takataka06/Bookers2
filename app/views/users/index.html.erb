
  <div class="container px-5 px-sm-0">
  <div class="row">
<div class="col-md-3">
<%= render 'books/user_sidebar', user: current_user ,book: Book.new%>
</div>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>
    <table class="table table-hover table-inverse">
     <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
    </tr>
    </thead>
    <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
          <% if user.profile_image.attached? %>
            <%= image_tag(user.profile_image, size: "80x80") %>
          <% else %>
            <%= image_tag("default.jpg", size: "80x80") %>
          <% end %>
      </td>
      <td>
        <%= link_to user.name,user_path(user.id) %>
      </td>
      <td>
        <%= link_to "Show", user_path(user.id), class: "btn btn-outline-primary btn-sm" %>
      </td>
    </tr>
    <% end %>
</tbody>
    </table>
</div>
</div>
</div>

